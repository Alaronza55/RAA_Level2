<Window x:Class="RAA_Level_2_Skills.MyForm2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RAA_Level_2_Skills"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Title="Revit Add-in Academy">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblLabel" Grid.Row="0">This is my form 2</Label>

        <ListBox x:Name="lbxText" Grid.Row="4" Margin="20,0,20,0" SelectionMode="Extended"/>
        <ComboBox x:Name="cmbViews" Grid.Row="5"/>

        <Button x:Name="btnOK" Grid.Row="6" Width="100" Height="30" Content="OK" Click="btnOK_Click"/>


    </Grid>
</Window>